{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "sourceMap": false,
    },
    "transpileOnly": true,
  }
}
